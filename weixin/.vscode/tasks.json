{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "taskName": "launch",
      "command": "node index.js",
      "type": "shell"
    },
    {
      "taskName": "build",
      "command": "tsc -p . -w",
      "type": "shell",
      "problemMatcher": [
        "$tsc-watch"
      ]
    }
  ]
}